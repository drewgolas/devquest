.creepy
	font-family 'Creepster', sans-serif
	font-size 19.9vw
	text-align center
	animation float 5s ease-in-out infinite
	@media (min-width: 1200px)
		font-size 20em
		
.tip
	position relative
	.tip-hover
		&:hover
			&+.tip-content
				display block
	.tip-content
		display none
		background #eee
		padding 5px
		position absolute
		
.badge
	vertical-align top
	margin 0 5px
	&+.badge
		margin-left 0
		
[class*=color-]
	&[class*=Confirmed]
		background #9DE0AF
		color rgba(0,0,0,.8)
	&[class*=Tentative]
		background #FFF687
		color rgba(0,0,0,.8)
	&[class*=Prospect]
		background #E5E5E5
		color rgba(0,0,0,.8)
	&[class*=Canceled]
		background #FA8B79
	&[class*=Closed]
		background #AEB8C3
	&[class*=Default]
		background #000
		
ul.checklist
	width 220px
	max-height 70vh
	overflow auto
	li
		padding 0 12px
		label
			font-weight 400

@keyframes float
	50%
		transform translate(0, 20px)

@css {
	@font-face {
		font-family: 'Creepster';
		font-weight: 400;
		font-style: normal;
		src: url('../../../fonts/Creepster-regular/Creepster-regular.eot');
		src: url('../../../fonts/Creepster-regular/Creepster-regular.eot?#iefix') format('embedded-opentype'),
			local('Creepster'),
			local('Creepster-regular'),
			url('../../../fonts/Creepster-regular/Creepster-regular.woff2') format('woff2'),
			url('../../../fonts/Creepster-regular/Creepster-regular.woff') format('woff'),
			url('../../../fonts/Creepster-regular/Creepster-regular.ttf') format('truetype'),
			url('../../../fonts/Creepster-regular/Creepster-regular.svg#Creepster') format('svg');
	}
}
